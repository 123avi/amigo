# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Amigo.index
POST    /bake                       controllers.Amigo.bake

GET     /base-images                controllers.Amigo.baseImages

GET     /roles                      controllers.Amigo.roles

GET     /recipes                    controllers.Amigo.recipes

GET     /:recipeId/:buildNumber/events    controllers.Amigo.sse(recipeId: models.RecipeId, buildNumber: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
